@model IEnumerable<WebDinhDuong.Models.MonAn>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_ThucDon.cshtml";
}


   

<div class="banner">
    <div class="w3l_banner_nav_right">
        <div class="w3ls_w3l_banner_nav_right_grid">
            <div class="w3ls_w3l_banner_nav_right_grid1">

                @if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <div class="col-md-3 w3ls_w3l_banner_left">
                            <div class="hover14 column">
                                <div class="agile_top_brand_left_grid w3l_agile_top_brand_left_grid">
                                    <div class="agile_top_brand_left_grid1">
                                        <figure>
                                            <div class="snipcart-item block">
                                                <div class="snipcart-thumb">
                                                    <a href=@Url.Action("Details", "MonAn", new { id = item.Id })><img src=@Url.Content(item.HinhAnh) alt=" " class="img-responsive" /></a>
                                                    <p>@item.Name</p>
                                                    <h4>@item.Calo Kcal  </h4>
                                                </div>
                                                <div class="snipcart-details">
                                                    <div class="btn top-right right"><a href="@Url.Action("Add", "ThucDon", new { idmonan = item.Id, quality = 1 })">Add to Your menu</a></div>
                                                    <div class="btn top-left left"><a href="@Url.Action("ThemMoi", "QuanLyKeHoach", new { id = item.Id, amount = 1 })">Add to Your plan</a></div>

                                                </div>
                                            </div>
                                        </figure>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                }
                else
                {
                    <div>Không tìm thấy kết quả phù hợp</div>
                }

                <div class="clearfix"> </div>
            </div>


        </div>
    </div>
    <div class="clearfix"></div>
</div>
