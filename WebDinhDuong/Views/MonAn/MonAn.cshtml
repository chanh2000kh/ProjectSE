

@model WebDinhDuong.Models.MonAn
@{

    var ListMon = (List<WebDinhDuong.Models.MonAn>)ViewBag.listMon;
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<!-- starter -->




<body>
    
    <div class="contentmon ">
        <div class="content_top">
            <div class="heading">
                <div class="space-medium">
        <div class="container">
            <div class="row">

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="section-title">
                        @using (Html.BeginForm("MonAn", "MonAn", FormMethod.Get))
                        {
                        <form>
                            @Html.TextBox("Search", " ", new { @class = "form-control", @type = "text", @name = "Search" })
                            <input type="submit" class="btn btn-primary" value="Search" />





                        </form>
                        }
                    </div>
                </div>

            </div>

        </div>
    </div>
            </div>
            <p class="center">
            </p>



            @for (int j = 0; j < ListMon.Count; j += 4)
            {
                int dem = 0;
                <div class="section group">

                    @for (int i = j; i < ListMon.Count; i++)
                    {

                        if (dem < 4)
                        {
                            dem++;
                            <div class="grid_1_of_4 images_1_of_4">
                                <img src="~/Assets/images/map_marker.png" />
                                @*<a href=@Url.Action("About" , new { id = ListMon[i].Id})><img src="@Url.Content(ListMon[i].ImagePath)" alt="" /></a>*@
                                <a href=@Url.Action("Detail", new { id = ListMon[i].Id })> <span style="color:red"> @ListMon[i].Name </span></a> <br />



                                <div class="price-details">
                                    <div class="add-cart">
                                        <br />
                                        @if (DisplayUsername.passusername != null)
                                        {
                                            <a href="@Url.Action("AddItem", "ThucDon")?id=@ListMon[i].Id & quantity=1">Thêm vào thực đơn</a> <br>
                                        }
                                    </div>
                                </div>

                            </div>


                        }
                        else
                        {
                            break;
                        }

                    }
                </div>
            }

        </div>





    </div>
</body>



