                                {
                                    <div onmouseout="CRateSelected()">
                                        <span id="span1" onmouseout="CRateOut(1)" onmouseover="CRateOver(1)" onclick="CRateClick(1)" class="glyphicon yellow glyphicon-star-empty "></span>
                                        <span id="span2" onmouseout="CRateOut(2)" onmouseover="CRateOver(2)" onclick="CRateClick(2)" class="glyphicon yellow glyphicon-star-empty"></span>
                                        <span id="span3" onmouseout="CRateOut(3)" onmouseover="CRateOver(3)" onclick="CRateClick(3)" class="glyphicon yellow glyphicon-star-empty"></span>
